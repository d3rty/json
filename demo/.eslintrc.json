{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "plugins": ["html"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "script"
  },
  "globals": {
    "Go": "readonly",
    "Prism": "readonly",
    "cleanJSON": "readonly",
    "Tagify": "readonly"
  },
  "rules": {
    "indent": ["error", 4],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn", { "varsIgnorePattern": "^(toggleSection)$" }],
    "no-console": "off"
  },
  "ignorePatterns": [
    "wasm_exec.js",
    "*.wasm",
    "node_modules/"
  ]
}
